# FibonRose Trust - Environment Variables Template
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection URL
DATABASE_URL=postgresql://postgres:postgres@db:5432/fibonrose

# PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fibonrose

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# AUTHENTICATION
# ===========================================
# Session secret for express-session
SESSION_SECRET=your-session-secret-here

# Auth0 Configuration (optional)
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_CALLBACK_URL=http://localhost:5000/callback
AUTH0_AUDIENCE=

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Notion Integration (optional)
NOTION_API_KEY=
NOTION_DATABASE_ID=

# Xano Integration (optional)
XANO_API_KEY=
XANO_BASE_URL=

# Google Cloud Platform (optional)
GCP_PROJECT_ID=
GCP_CREDENTIALS_JSON=

# ===========================================
# BLOCKCHAIN / WEB3 (optional)
# ===========================================
ETHEREUM_RPC_URL=
WALLET_PRIVATE_KEY=

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable debug logging
DEBUG=false
