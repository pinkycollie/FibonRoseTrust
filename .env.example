# Server Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fibonrose

# Auth0 Configuration
AUTH0_SECRET=your_auth0_secret_here
AUTH0_BASE_URL=http://localhost:5000
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com

# Persona Identity Verification
PERSONA_API_KEY=your_persona_api_key
PERSONA_ENVIRONMENT=sandbox
PERSONA_TEMPLATE_ID=your_template_id
PERSONA_WEBHOOK_SECRET=your_webhook_secret

# Google Cloud Platform
GCP_PROJECT_ID=your_gcp_project_id
GCP_CREDENTIALS_PATH=/path/to/credentials.json

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Optional: External Services
XANO_API_KEY=your_xano_api_key
XANO_BASE_URL=https://your-workspace.xano.io/api:version

# Optional: Monitoring
CODECOV_TOKEN=your_codecov_token
SNYK_TOKEN=your_snyk_token
